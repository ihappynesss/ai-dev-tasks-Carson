# Development Environment Configuration
# For local Docker development and testing

# Environment
NODE_ENV=development
ENVIRONMENT=development

# PostgreSQL Database
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_dev_password
POSTGRES_DB=n8n_dev
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_dev
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n_dev_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_QUEUE=0
REDIS_DB_CACHE=1
REDIS_DB_RATELIMIT=2
REDIS_DB_FAILED=3

# n8n Authentication (weak credentials for dev only)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Execution Mode (regular for local dev - faster feedback)
EXECUTIONS_MODE=regular
EXECUTIONS_PROCESS=main
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Queue Configuration (disabled in dev mode)
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0
QUEUE_BULL_REDIS_PASSWORD=
QUEUE_HEALTH_CHECK_ACTIVE=false
QUEUE_RECOVERY_INTERVAL=60

# Timezone
GENERIC_TIMEZONE=Australia/Sydney

# Logging (verbose for debugging)
N8N_LOG_LEVEL=debug
N8N_LOG_OUTPUT=console,file

# Development Features
N8N_PERSONALIZATION_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_METRICS=false

# Security (relaxed for dev)
N8N_SECURE_COOKIE=false

# Performance (lower limits for dev)
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=600

# External Service Configuration (Task 15.2)
# These should be configured when deploying to dev environment

# Freshdesk Test Instance
FRESHDESK_DOMAIN=yourcompany-dev
FRESHDESK_API_KEY=your_freshdesk_api_key_here
FRESHDESK_WEBHOOK_SECRET=generate_random_secret_here

# Supabase Development Database
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# AI API Keys (Development/Test Keys)
CLAUDE_API_KEY=sk-ant-api03-your_key_here
OPENAI_API_KEY=sk-your_openai_key_here
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# API Configuration
CLAUDE_API_URL=https://api.anthropic.com
OPENAI_API_URL=https://api.openai.com
PERPLEXITY_API_URL=https://api.perplexity.ai
